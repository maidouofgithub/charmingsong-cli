#!/usr/bin/env node

const prompt = require('inquirer').createPromptModule()
const { downloadtemplate, otputTemplate } = require('../lib/util')
const { initMeta: meta } = require('../lib/prompt')
prompt(meta).then(answers => {
  run(answers)
})

function run({ template, name }) {
  downloadtemplate(template).then(dir => {
    otputTemplate(dir, name, prompt)
  })
}
